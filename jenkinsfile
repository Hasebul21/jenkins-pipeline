pipeline {
    agent any
    
    tools {
        nodejs 'NODE24'
    }

    stages {
        stage('Backend Installation') {
            steps {
                dir('backend') {
                    echo 'Install backend dependencies...'
                    sh 'npm install'
                }
               
            }
        }
        stage('Backend Build') {
            steps {
                dir('backend') {
                   echo 'Bulding...'
                   sh 'npm build'
                }
            }
        }
        stage('Backend Test') {
            steps {
                dir('backend') {
                   echo 'Testing...'
                   sh 'npm test'
                }
            }
        }
        stage('Frontend Installation') {
            steps {
                dir('frontend') {
                   echo 'Installing...'
                   sh 'npm install'
                }
            }
        }
        stage('Frontend Build') {
            steps {
                dir('frontend') {
                   echo 'Building...'
                   sh 'npm run build'
                }
            }
        }
        stage('Frontend Test') {
            steps {
                dir('frontend') {
                   echo 'Testing...'
                   sh 'npm run test'
                }
            }
        }

    }

    post {
        always {
            echo 'This will always run after the stages.'
        }
        success {
            echo 'This will run only if the pipeline succeeds.'
        }
        failure {
            echo 'This will run only if the pipeline fails.'
        }
    }
}