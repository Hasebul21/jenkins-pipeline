pipeline {
    agent any

    tools {
        nodejs 'NODE24'
    }

    environment {
        DOCKERHUB_CREDENTIALS = 'dockerhub'
        DOCKERHUB_USER = 'hasebul21'
    }

    stages {
        stage('Backend Installation') {
            steps {
                dir('backend') {
                    echo 'ğŸ“¦ Installing backend dependencies...'
                    sh 'npm install'
                }
            }
        }

        stage('Backend Build') {
            steps {
                dir('backend') {
                    echo 'ğŸ—ï¸ Building backend...'
                    sh 'npm run build'
                }
            }
        }

        stage('Backend Test') {
            steps {
                dir('backend') {
                    echo 'ğŸ§ª Running backend tests...'
                    sh 'npm test'
                }
            }
        }

        stage('Frontend Installation') {
            steps {
                dir('frontend') {
                    echo 'ğŸ“¦ Installing frontend dependencies...'
                    sh 'npm install'
                }
            }
        }

        stage('Frontend Build') {
            steps {
                dir('frontend') {
                    echo 'ğŸ—ï¸ Building frontend...'
                    sh 'npm run build'
                }
            }
        }

        stage('Frontend Test') {
            steps {
                dir('frontend') {
                    echo 'ğŸ§ª Running frontend tests...'
                    sh 'npm run test'
                }
            }
        }

        stage('Docker Build and Push') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', DOCKERHUB_CREDENTIALS) {
                        echo 'ğŸ³ Building and pushing backend image...'
                        dir('backend') {
                            def backendImage = docker.build("${DOCKERHUB_USER}/jenkins_backend-app:latest")
                            backendImage.push()
                        }

                        echo 'ğŸ³ Building and pushing frontend image...'
                        dir('frontend') {
                            def frontendImage = docker.build("${DOCKERHUB_USER}/jenkins_frontend-app:latest")
                            frontendImage.push()
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'ğŸ•“ Pipeline finished (always runs).'
            slackSend(
                channel: '#recruitment-app-jenkins-alerts',
                color: '#439FE0',
                message: """â„¹ï¸ *Pipeline Completed!*
*Job:* ${env.JOB_NAME}
*Build:* #${env.BUILD_NUMBER}
*Status:* ${currentBuild.currentResult}
*Branch:* ${env.GIT_BRANCH ?: 'main'}
*Triggered by:* ${currentBuild.getBuildCauses()[0]?.userName ?: 'Automated Trigger'}
*URL:* ${env.BUILD_URL}"""
            )
        }

        success {
            echo 'âœ… Pipeline succeeded!'
            slackSend(
                channel: '#recruitment-app-jenkins-alerts',
                color: '#36a64f',
                message: """âœ… *Deployment Successful!*
*Job:* ${env.JOB_NAME}
*Build:* #${env.BUILD_NUMBER}
*Branch:* ${env.GIT_BRANCH ?: 'main'}
*Triggered by:* ${currentBuild.getBuildCauses()[0]?.userName ?: 'Automated Trigger'}
*URL:* ${env.BUILD_URL}"""
            )
        }

        failure {
            echo 'âŒ Pipeline failed!'
            slackSend(
                channel: '#recruitment-app-jenkins-alerts',
                color: '#FF0000',
                message: """âŒ *Deployment Failed!*
*Job:* ${env.JOB_NAME}
*Build:* #${env.BUILD_NUMBER}
*Branch:* ${env.GIT_BRANCH ?: 'main'}
*Triggered by:* ${currentBuild.getBuildCauses()[0]?.userName ?: 'Automated Trigger'}
*URL:* ${env.BUILD_URL}"""
            )
        }
    }
}
