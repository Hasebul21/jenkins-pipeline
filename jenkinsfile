pipeline {
    agent any

    tools {
        nodejs 'NODE24'
    }

    environment {
        DOCKERHUB_CREDENTIALS = 'dockerhub'
        DOCKERHUB_USER = 'hasebul21'
        SLACK_CHANNEL = '#recruitment-app-jenkins-alerts'
        TIMEZONE = 'Asia/Dhaka'
    }

    stages {
        stage('Backend Installation') {
            steps {
                dir('backend') {
                    echo 'üì¶ Installing backend dependencies...'
                    sh 'npm install'
                }
            }
        }

        stage('Backend Build') {
            steps {
                dir('backend') {
                    echo 'üèóÔ∏è Building backend...'
                    sh 'npm run build'
                }
            }
        }

        stage('Backend Test') {
            steps {
                dir('backend') {
                    echo 'üß™ Running backend tests...'
                    sh 'npm test'
                }
            }
        }

        stage('Frontend Installation') {
            steps {
                dir('frontend') {
                    echo 'üì¶ Installing frontend dependencies...'
                    sh 'npm install'
                }
            }
        }

        stage('Frontend Build') {
            steps {
                dir('frontend') {
                    echo 'üèóÔ∏è Building frontend...'
                    sh 'npm run build'
                }
            }
        }

        stage('Frontend Test') {
            steps {
                dir('frontend') {
                    echo 'üß™ Running frontend tests...'
                    sh 'npm run test'
                }
            }
        }

        stage('Docker Build and Push') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', DOCKERHUB_CREDENTIALS) {
                        echo 'üê≥ Building and pushing backend image...'
                        dir('backend') {
                            def backendImage = docker.build("${DOCKERHUB_USER}/jenkins_backend-app:latest")
                            backendImage.push()
                        }

                        echo 'üê≥ Building and pushing frontend image...'
                        dir('frontend') {
                            def frontendImage = docker.build("${DOCKERHUB_USER}/jenkins_frontend-app:latest")
                            frontendImage.push()
                        }
                    }
                }
            }
        }
    }

    post {
        success {
            script {
                def timestamp = new Date().format("yyyy-MM-dd HH:mm:ss", TimeZone.getTimeZone(env.TIMEZONE))
                def commit = sh(returnStdout: true, script: "git rev-parse --short HEAD").trim()
                def branch = (env.GIT_BRANCH ?: env.BRANCH_NAME ?: 
                    sh(returnStdout: true, script: "git rev-parse --abbrev-ref HEAD").trim()
                ).replaceFirst(/^origin\//, '')

                def cause = currentBuild.getBuildCauses()[0]
                def deployer = cause?.userFullName ?: cause?.userName ?: 'Automated Trigger'

                slackSend(
                    channel: env.SLACK_CHANNEL,
                    color: '#36a64f',
                    message: """‚úÖ *Deployment Successful!*
*Environment:* ${params.DEPLOY_ENV ?: 'staging'}
*Branch:* ${branch}
*Commit:* ${commit}
*Triggered by:* ${deployer}
*Timestamp:* ${timestamp}
*Job:* ${env.JOB_NAME}
*Build:* #${env.BUILD_NUMBER}
*URL:* ${env.BUILD_URL}"""
                )
            }
        }

        failure {
            script {
                def timestamp = new Date().format("yyyy-MM-dd HH:mm:ss", TimeZone.getTimeZone(env.TIMEZONE))
                def commit = sh(returnStdout: true, script: "git rev-parse --short HEAD").trim()
                def branch = (env.GIT_BRANCH ?: env.BRANCH_NAME ?: 
                    sh(returnStdout: true, script: "git rev-parse --abbrev-ref HEAD").trim()
                ).replaceFirst(/^origin\//, '')

                def cause = currentBuild.getBuildCauses()[0]
                def deployer = cause?.userFullName ?: cause?.userName ?: 'Automated Trigger'

                slackSend(
                    channel: env.SLACK_CHANNEL,
                    color: '#FF0000',
                    message: """‚ùå *Deployment Failed!*
*Environment:* ${params.DEPLOY_ENV ?: 'staging'}
*Branch:* ${branch}
*Commit:* ${commit}
*Triggered by:* ${deployer}
*Timestamp:* ${timestamp}
*Job:* ${env.JOB_NAME}
*Build:* #${env.BUILD_NUMBER}
*URL:* ${env.BUILD_URL}"""
                )
            }
        }
    }
}
